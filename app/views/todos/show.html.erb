
<div class="container">

    <div class="well">

        <div class="row">
          <div class="col-lg-6">
              description: <%= @todo.description %>
          </div><!-- /.col-lg-6 -->
          <div class="col-lg-6">
            completed:
            <%
              if @todo.completed
                flag = "checked"
              else
                flag = ""
              end
            %>
            <input type="checkbox" aria-label="" <%= flag %>  >
          </div><!-- /.col-lg-6 -->
        </div><!-- /.row -->
        <%= link_to 'Volver', todos_path , class:'btn btn-info'%>

    </div>

</div>
